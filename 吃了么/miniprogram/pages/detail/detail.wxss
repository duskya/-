/* 收藏点赞评论 */
.bottom{
  background-color: #f3f6f7;
  bottom: 0; 
  height: 80rpx;
  line-height: 80rpx;
  width: 100%;
  position: fixed;
  /* 生成绝对定位的元素，相对于浏览器窗口进行定位。 */
  display: inline-block;
  text-align: center;
  color: black;
  font-size: 30rpx;
  /* justify-content : space-between; */
}
.bottom .collection {
  position: absolute;
  right: 290rpx;

}
.bottom .good{
  position: absolute;
  right: 160rpx;
}
.bottom .comment{
  position: absolute;
  right: 0rpx;
}

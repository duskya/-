/* pages/user/user.wxss */
/* 登录页面 */
.header {
  text-align: center;
  line-height: 450rpx;
}
.header image {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  top: 150rpx;
}
.content {
  height: 150rpx;
  text-align: center;
}
.content text {
  color: gray;
}
.bottom {
  font-size: 30rpx;
  border-radius: 50rpx;
}

/* 用户页面 */
.userpage{
 padding: 50rpx 0 0 0;
   background-color:  var(--themecolor);
   width: 100%;
   height: 100%;
   /* background-color: #b3c6c9;  */
}
.userpage .userinfo{
  display: flex;  
  flex-direction: column;  
  align-items: center; 
  
}
.userpage .userinfo .userimg{
  overflow:hidden;  
  width: 200rpx;  
  height: 200rpx;  
  margin-top: 100rpx;  
  border-radius: 50%;  
}
.userpage .userinfo .username{
  position: relative;
  text-align:center;
  height: 150rpx;
  top: 30rpx;
  font-size: small;
}
.userpage .info{
  font-size: 30rpx;
  padding: 60rpx 10rpx 10rpx 10rpx;
  
}
.userpage .info .publish{
 
  background-color: #f5f5f5; 
  border-radius: 30rpx;
  text-align:center;
  line-height: 80rpx;
  border: 1rpx solid #fff;
  color: rgb(22, 21, 21);
}
.userpage .info .collection{
  background-color: #f5f5f5; 
  border-radius: 30rpx;
  text-align:center;
  line-height: 80rpx;
  border: 1rpx solid #fff;
  /* color: #fff; */
}
